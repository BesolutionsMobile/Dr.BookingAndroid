<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.besolutions.drbookingOriginal.Scenario.ScenarioChangePassword.Controller.Change_Password">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/booking" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/_25sdp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rounded"
                        android:gravity="center_vertical|right"
                        android:hint="كلمة السر القديمة"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingRight="@dimen/_40sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13ssp" />

                    <EditText
                        android:id="@+id/newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rounded"
                        android:gravity="center_vertical|right"
                        android:hint="كلمة السر الجديدة"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingRight="@dimen/_40sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13ssp" />

                    <EditText
                        android:id="@+id/retypepassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rounded"
                        android:gravity="center_vertical|right"
                        android:hint="تاكيد كلمة السر الجديدة"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_40sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13ssp" />

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/appback"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="تعديل"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13ssp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_6ssp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:src="@drawable/lockk" />

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:src="@drawable/lockk" />

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_86sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:src="@drawable/lockk" />
            </RelativeLayout>


        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:indeterminateTint="@color/infoColor"/>
    </RelativeLayout>
</LinearLayout>