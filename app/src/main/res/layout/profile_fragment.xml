<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#E9EEF3"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/products"/>
        <ViewSwitcher
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/viewswitch">

            <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"></LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/appback"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"></LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_25sdp"
                                        android:gravity="center"
                                        android:id="@+id/username"
                                        android:text=" ابراهيم اللقانى"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_14ssp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:gravity="center"
                                        android:id="@+id/usernumber"
                                        android:text="01234567890"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_12ssp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">



                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:background="#CECECE"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myproducts"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:gravity="right"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@android:color/black"
                                            android:layout_marginRight="@dimen/_10sdp"
                                            android:text="منتجاتي"
                                            android:textSize="@dimen/_13ssp" />

                                        <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginRight="@dimen/_10sdp"
                                            android:src="@drawable/barcodee" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:background="#CECECE"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:gravity="right"
                                        android:id="@+id/editdata"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@android:color/black"
                                            android:layout_marginRight="@dimen/_10sdp"
                                            android:text="تعديل البيانات"
                                            android:textSize="@dimen/_13ssp" />

                                        <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginRight="@dimen/_10sdp"
                                            android:src="@drawable/users" />
                                    </LinearLayout>


                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:background="#CECECE"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:gravity="right"
                                    android:id="@+id/myappoienments"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textColor="@android:color/black"
                                        android:text="حجوزاتي"
                                        android:textSize="@dimen/_13ssp" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:src="@drawable/appointment" />

                                </LinearLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#CECECE"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:gravity="right"
                                    android:id="@+id/mywishlist"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:textColor="@android:color/black"
                                        android:text="مفضلاتي"
                                        android:textSize="@dimen/_13ssp" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:src="@drawable/house" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:text="تسجيل الخروج"
                            android:textSize="@dimen/_13ssp"
                            android:id="@+id/logout"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_60sdp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:background="@color/green"/>

                    </LinearLayout>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:civ_border_width="@dimen/_2sdp"
                        android:scaleType="centerCrop"
                        app:civ_border_color="@color/green"
                        android:id="@+id/userimage"
                        android:src="@drawable/userprof" />

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </ViewSwitcher>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/infoColor"/>
</RelativeLayout>