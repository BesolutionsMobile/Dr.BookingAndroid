<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appback</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="AppTheme.progressBar">
        <item name="colorAccent">@color/appback</item> <!-- Whatever color you want-->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
